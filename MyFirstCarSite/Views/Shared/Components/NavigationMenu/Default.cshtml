@model IEnumerable<string>

<a class="btn btn-block btn-secondary" 
   asp-action="List" 
   asp-controller="Vehicle" 
   asp-route-vehicleCategory="">
    Home
</a>

@foreach (string vehicleCategory in Model)
{
    <a class="btn btn-block @(vehicleCategory == ViewBag.SelectedVehicleCategory ? "btn-primary": "btn-secondary")"
       asp-action="List"
       asp-controller="Vehicle"
       asp-route-vehicleCategory="@vehicleCategory"
       asp-route-vehiclePage="1">
        @vehicleCategory
    </a>
}
